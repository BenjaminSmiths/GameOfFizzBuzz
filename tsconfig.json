{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "sourceMap": true,
    "declaration": false
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.Spec.ts"
  ]
}